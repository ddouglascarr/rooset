#!/bin/bash
set -o errexit -o nounset -o pipefail

WORKDIR=`dirname "$(readlink -f "$0")"`
cd $WORKDIR
source ${WORKDIR}/../etc/set-env

export RATK_GEN_QUERY_DECL_DIR=${WORKDIR}/../rooset-declarations/src/queries

node -e "require('./utils/eventStoreUtils').initAllProjections().catch(() => process.exit(1))"
