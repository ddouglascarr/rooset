{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "allowJs": false,
    "typeRoots": ["node_modules/@types", "tstypes"],
    "paths": {
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"]
    }
  }
}
